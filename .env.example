# =============================
# SpaceLaunchTracker Environment
# =============================
# Copy this file to .env and fill in required secrets.
# Never commit the filled .env file.

# ---- Required External API Credentials ----
SPACE_TRACK_USERNAME=
SPACE_TRACK_PASSWORD=
OPENWEATHER_API_KEY=
NOAA_API_KEY=

# ---- Internal API Security ----
# API key required by clients to call your service endpoints.
API_KEY=

# ---- Optional Service Integrations ----
# Slack webhook for alerts (optional)
SLACK_WEBHOOK_URL=
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# ---- Launch Sites (JSON encoded). Override defaults if needed ----
# Example: {"cape_canaveral": {"lat": 28.396837, "lon": -80.605659}, "vandenberg": {"lat": 34.742, "lon": -120.5724}}
LAUNCH_SITES_JSON=

# ---- Thresholds ----
MAX_WIND_SPEED_KNOTS=20
MAX_KP_INDEX=5

# ---- Caching / Storage ----
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300

# ---- Database (future use) ----
DATABASE_URL=sqlite:///./data/app.db

# ---- Logging ----
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# ---- Deployment Metadata ----
PROJECT_NAME=SpaceLaunchTracker
PROJECT_DESCRIPTION="Space traffic and launch window tracking service"
VERSION=1.0.0

# ---- Feature Flags ----
ENABLE_ANOMALY_DETECTION=true
ENABLE_WEBSOCKETS=true
ENABLE_METRICS=true

# ---- Scheduler ----
SCHEDULE_FETCH_CRON=*/15 * * * *

# ---- Timezone ----
TZ=UTC

# ---- Misc ----
PYTHONUNBUFFERED=1
