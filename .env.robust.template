# SpaceLaunchTracker Robust Environment Template
# Copy to .env and fill in required values.

############################
# External Public APIs (No keys required) #
############################
# All external data sources are public & keyless (Celestrak, NOAA NWS, NOAA Space Weather)

############################
# Service Security (internal)           #
############################
API_KEY=
PRODUCTION=true

############################
# Launch Sites (JSON)       #
############################
# Optional: merge with defaults in code
# LAUNCH_SITES_JSON={"guiana_space_center": {"lat": 5.236, "lon": -52.768}} 
LAUNCH_SITES_JSON=

############################
# Thresholds                #
############################
MAX_WIND_SPEED_KNOTS=20
MAX_KP_INDEX=5

############################
# Caching / Redis           #
############################
REDIS_URL=redis://redis:6379/0
CACHE_TTL=300

############################
# Scheduler                 #
############################
SCHEDULE_FETCH_CRON=*/15 * * * *

############################
# Feature Flags             #
############################
ENABLE_ANOMALY_DETECTION=true
ENABLE_WEBSOCKETS=true
ENABLE_METRICS=true

############################
# Logging                   #
############################
LOG_LEVEL=INFO
LOG_DIR=/app/logs

############################
# Metadata                  #
############################
PROJECT_NAME=SpaceLaunchTracker
PROJECT_DESCRIPTION="Space traffic and launch window tracking service"
VERSION=1.0.0

############################
# Misc                      #
############################
TZ=UTC
PYTHONUNBUFFERED=1
